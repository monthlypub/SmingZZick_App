<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow
            android:minHeight="52dp">
            <TextView
                android:layout_width="@dimen/width_text_make_table_title"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="퍼짐"/>
            <SeekBar
                android:id="@+id/shadow_radius"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </TableRow>
        <TableRow
            android:minHeight="52dp">
            <TextView
                android:layout_width="@dimen/width_text_make_table_title"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="색"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">
                <ImageView
                    android:id="@+id/shadow_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/repeat_pattern_bg_white"
                    android:src="#000"/>
            </FrameLayout>
        </TableRow>
        <TableRow
            android:minHeight="52dp">
            <TextView
                android:layout_width="@dimen/width_text_make_table_title"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="위치"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center">
                <com.monpub.textmaker.widget.JogView
                    android:id="@+id/shadow_dxdy"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>






</LinearLayout>