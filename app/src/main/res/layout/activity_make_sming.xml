<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="스밍짤 수동 생성"
        app:titleTextColor="#fff"
        android:elevation="4dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">
            <android.support.percent.PercentRelativeLayout
                android:id="@+id/left_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/left_image"
                    app:layout_widthPercent="100%"
                    app:layout_aspectRatio="100%"
                    android:background="@drawable/repeat_pattern_bg"/>
            </android.support.percent.PercentRelativeLayout>
            <View
                android:layout_width="3dp"
                android:layout_height="1dp"/>
            <android.support.percent.PercentRelativeLayout
                android:id="@+id/right_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/right_image"
                    app:layout_widthPercent="100%"
                    app:layout_aspectRatio="100%"
                    android:background="@drawable/repeat_pattern_bg"/>
            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="-30dp"
            android:src="@drawable/ic_swap_horiz_white_48dp"
            android:scaleType="center"
            app:backgroundTint="#ee424242"
            android:visibility="gone"
            android:elevation="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="18dp"
        android:text="위 좌우 빈칸을 선택해서 사진을 선택한 후\n저장을 누르면 아래 이름으로 저장됩니다."
        android:alpha="0.8"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#424242">
        <EditText
            android:id="@+id/filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="스밍찍_수동합침"
            android:textColorHint="#afff"
            android:textColor="#fff"/>
    </FrameLayout>
</LinearLayout>
