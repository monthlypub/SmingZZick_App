<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.monpub.sming.youtube.WebViewSwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/activity_youtube_sming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.monpub.sming.youtube.YoutubeSmingActivity">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <WebView android:id="@+id/webView"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:layout_weight="1"
                             android:background="#222"/>
                    <ProgressBar
                        android:id="@+id/page_loading"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:max="100"
                        android:progress="50"
                        android:visibility="visible"
                        android:progressDrawable="@drawable/shape_page_loading"
                        android:background="@null"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        tools:text="0:0 / 1:3"/>
                </LinearLayout>

            </LinearLayout>
        </com.monpub.sming.youtube.WebViewSwipeRefreshLayout>
        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="15dp"
            android:background="@drawable/gradient_youtube_drawer"
            android:clickable="true">
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true">
                <LinearLayout
                    android:id="@+id/layer_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="로그인이 되어있지 않습니다.\n\n로그인이 되어있으면\n'자동 좋아요'가 됩니다."
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="#a333"/>

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="로그인"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="#cc181e"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/guide_usage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="이 화면에서 재생되는 것만\n자동캡처됩니다.\n\n타앱이나 타브라우저 재생은 캡쳐 안됩니다."
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="#a333"/>
                    <TextView
                        android:id="@+id/guide_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="이 메뉴는 좌측 끄트머리를\n당기면 나옵니다."
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="#a333"/>
                    <TextView
                        android:id="@+id/guide_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="터치하거나 좌측으로 밀면\n들어갑니다."
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="#a333"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#cc181e"
                    android:src="@drawable/ic_exit_to_app_white_48dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="앱으로 나가기"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
