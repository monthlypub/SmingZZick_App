<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="기본 스티커 설정"
                app:titleTextColor="#fff"
                android:elevation="4dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:orientation="horizontal">
                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/dummy_view"
                            app:layout_widthPercent="100%"
                            app:layout_aspectRatio="200%"
                            android:scaleType="fitXY"
                            android:background="@drawable/repeat_pattern_bg"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_alignTop="@id/dummy_view"
                            android:layout_alignBottom="@id/dummy_view"
                            android:layout_centerHorizontal="true"
                            android:background="#6fff"/>
                        <RelativeLayout
                            android:id="@+id/sticker_board"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignTop="@id/dummy_view"
                            android:layout_alignBottom="@id/dummy_view">
                        </RelativeLayout>
                    </android.support.percent.PercentRelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_drag"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_alignBottom="@id/layout_board"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:background="#9000"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/msg_drag"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:hint="스티커간의 순서를 바꾸거나\n쓰레기통으로 옮겨서 제거하세요."
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textColorHint="#fff"/>
                    <ImageView
                        android:id="@+id/trash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete_white_48dp"
                        android:alpha="0.8"/>
                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_apply"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#000">
            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#000">
                <TextView
                    android:id="@+id/guide_sticker_choice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="바로 위 붙여진 스티커 목록 중 하나를 골라서\n크기, 회전, 투명도 조정을 할 수 있습니다."
                    android:textColor="#fff"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/guide_sticker_select"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="아래 스티커 목록에서 선택하고 붙일 수 있어요."
                    android:textColor="#fff"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/layout_alpha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불투명도"
                        android:textColor="#fff"/>

                    <SeekBar
                        android:id="@+id/progress_alpha"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@id/layout_edit"
            android:layout_alignBottom="@id/layout_edit"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="#b000"
            android:visibility="gone"
            android:clickable="true">
            <RelativeLayout
                android:id="@+id/preview_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_forever_white_48dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="취소"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:background="@drawable/shape_preview_button"/>
                <TextView
                    android:id="@+id/edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="편집"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:background="@drawable/shape_preview_button"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/attach"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="붙이기"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:background="@drawable/shape_preview_button"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#9000"
            android:background="@drawable/repeat_pattern_bg"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_sticker"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </FrameLayout>
</LinearLayout>
